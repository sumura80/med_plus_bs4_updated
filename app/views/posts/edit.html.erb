    <% if @post.image? %>
     <%= image_tag @post.image.url %>
    <% end %><br>
    <%= form.label :image %>
    <%= form.file_field :image,class: "form-control" %>
  </div>

  <div class="form-group">
   <%= form.label :remove_image %>
   <%= form.check_box :remove_image %>
 </div>

