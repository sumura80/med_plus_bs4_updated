  


   <%= render 'layouts/header' %>
  
      <div class="container">
       <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == "notice" ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">×</a> <!-- アラートダイアログに×ボタンをつける -->
          <%= msg %>
        </div>
      <% end %>
      <%= yield %>
    </div>